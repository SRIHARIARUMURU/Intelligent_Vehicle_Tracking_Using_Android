<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape: Rectangle -->
    <solid android:color="#FF6200EE"/> <!-- Set the color of the rectangle (purple in this case) -->

    <!-- Optionally, add corner radius (rounded edges) -->
    <corners android:radius="8dp"/> <!-- Adjust the radius for rounded corners -->

    <!-- Optional: Add a border -->
    <stroke android:color="#FFFFFF" android:width="2dp"/> <!-- White border with 2dp width -->

    <!-- Optional: Add padding inside the shape -->
    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
</shape>
